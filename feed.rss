<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <atom:link href="{{ site.url }}/podcast.rss" rel="self" type="application/rss+xml" />
    <title>{{ site.title }}</title>
    <link>{{ site.url }}</link>
    <description>{{ site.description | xml_escape }}</description>
{% for post in site.posts %}
    <item>
      <title>{{ post.title | xml_escape }}</title>
      <enclosure url="{{ post.file }}" length="{{ post.length }}" type="audio/mp3"/>
      <guid isPermaLink="true">{{ site.url }}/{{ post.url }}</guid>
      <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
      <description>{{ post.description | xml_escape }} Show Notes Available at {{ site.url }}/{{ post.url }}.</description>
    </item>
{% endfor %}
  </channel>
</rss>
